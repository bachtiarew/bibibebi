<!DOCTYPE html>
<html>
<head>
  <title>Bibibebi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %>">
<meta name="viewport" content="width=device-width, initial-scale=1.0" >
	<% if flash[:alert] %>
		<% flashAlert = alert_error(flash[:alert]) %>
	<% elsif flash[:notice] %>
		<% flashAlert = alert_notice(flash[:notice]) %>
	<% end %>
	<%= react_component "AlertApp" , flashAlert:flashAlert %>
	<%= yield %>
</body>
</html>
