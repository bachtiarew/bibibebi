<%= render 'layouts/navbar' %>
<div class="panel panel-default">
	<div class="panel-heading"> Sign In
	</div>
	<div class="panel-body">
	<%= form_for :users, url: users_login_path do |f| %>
	<div class="frm-group">
	<%= f.label :email, "email" %>
	<%= f.email_field :email, placeholder: "Your Email address", class: "form-control" %><br>
	</div>

	<div class="form-group"	>
	<%= f.label :password, "Password" %>
	<%= f.password_field :password, placeholder: "Password", class: "form-control" %><br>
	</div>

	<div class="form-group">
			<%= f.check_box :remember %>
			<%= f.label :remember, "Remember Me" %>

	</div>
	<%= f.submit "Sign In", class: "btn btn-md btn-info" %>
<% end %>
