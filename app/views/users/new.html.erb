<%= render "error" %>
<div class="panel panel-default">
	<div class="panel-heading">Sign Up
	</div>

	<div class="panel-body">
		<%= form_for :users, url: users_path do |f| %>
		<div class="form-group">
			<%= f.text_field :firstname, placeholder: "FirstName", class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.text_field :lastname, placeholder: "Lastname", class: "form-control" %>
		</div>
		<div class="radio">
			<label>
			<input type="radio" name="users[gender]" value="Male" checked>
			Male
			</label>

			<label>
			<input type="radio" name="users[gender]" value="Female">
			Female
			</label> 
		</div>
		<div class="form-group">
			<%= f.text_field :bornplace, placeholder: "Place your born", class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :borndate, "Birth of Date" %>
			<%= f.date_field :borndate, placeholder: "Your born day", class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :address, "Your Address" %>
			<%= f.text_area :address, class: "form-control", rows: 7 %>
		</div>

		<div class="form-group">
			<%= f.label :phone_number , "Phone Number" %>
			<%= f.text_field :phone_number, class: "form-control", placeholder: "Fill Your Phone Number" %>
		</div>
		<div class="form-group">
			<%= f.email_field :email, placeholder: "Your Email address", class: "form-control", require: true%>
		</div>

		<div class="form-group">
			<%= f.password_field :password, placeholder: "Password", class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.submit "Register", class: "btn btn-md btn-info long_btn"%>
		</div>

<% end %>
<%= link_to "Sign In" , users_sign_in_path %><br>
<%= link_to "Back to homepage", root_path %>
