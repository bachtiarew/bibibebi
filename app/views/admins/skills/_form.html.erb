<div class="panel panel-default">
  <div class="panel-heading">Add Skills</div>

  <div class="panel-body">
  <%= form_for :skill , url: admins_skills_path do |f| %>
  <div class="form-group">
    <%= f.label :name , "name" %>
    <%= f.text_field :name , placeholder: "Skill Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class: "form-control" ,rows: 7 %>
  </div>


  <div class="form-group">
    <%= f.label :score %>
    <%= f.number_field :score, placeholder: "Score", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Add Skill", class: "btn btn-info btn-md" %>
  </div>
  <% end %>
  </div>
</div>
