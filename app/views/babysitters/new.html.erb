<div class="panel panel-default">
  <div class="panel-heading">
    Babysitter Registration
  </div>
  <div class="panel-body">
    <%= form_for :babysitter, url: babysitters_path do |f| %>
    <div class="form-group">
      <%= f.label :nik , "Identity Number" %>
      <%= f.text_field :nik, placeholder: "Your Identity number", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :age, "Age" %>
      <%= f.number_field :age, placeholder: "Your Age", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :skills, "Skills" %>
        <div class="row">
          <div class="col-sm-11">
            <select name="babysitter[skills]" class="form-control" >
            <% @skill.each do |skill| %>
            <option value=<%= skill.id %> > <%= skill.name %> </option>
            <% end %>
            </select>
          </div>

          <div class="col-sm-1">
            <button type="button" class="btn btn-md btn-success btn-long">Add</button>
          </div>
        </div>      
    </div>

    <div class="well">
      <div class="skill alert alert-warning alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true"> &times; 
      </button> Keeping Baby </div>
    </div>

    <div class="form-group">
      <%= f.label :description , "Skill Description" %>
      <%= f.text_area :description, class: "form-control", rows: 7 %>
    </div>

    <div class="form-group">
      <%= f.label :photos, "Upload Picture" %>
        <%= f.file_field :photos ,class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-md btn-info" %>
    </div>

    <% end %>
  </div>
</div>
