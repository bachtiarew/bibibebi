<script>
	dispatcher.dispatch({
		actionType: "mainpage-mobile-set-babysitter",
		user: <%= json_for(@user).html_safe %>,
		babysitter: <%= json_for(@babysitter).html_safe %>,
		parents: <%= json_for(@parents).html_safe %>,
	})
</script>

<%= render "layouts/navbar" %>
<%= react_component "MainpageMobile", currentUser: current_user, csrf_token: form_authenticity_token %>
<div id="mainpage" class="mainpages">
	<div class="row">
		<div class="col-sm-2 sidebar-frame">
			<%= react_component "Sidebar", person: get_babysitter, skills: @skills, picture: @picture %>
		</div>	
		<div class="col-sm-6 thumbnail-frame">
			<%= react_component "Thumbnail", thumbs: get_thumbs, currentUser: current_user %>
		</div>
	<div class="col-sm-4">
			<%= react_component "Profile", currentUser: get_current_user %>
		</div>
	</div>
</div>

<script>
	$(".babysitter-rating").html("<%=j render 'layouts/display_babysitter_rate' %>")
</script>